<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="600.0" maxWidth="900.0" minHeight="600.0" minWidth="900.0" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="magazzino.entratamerci.controller.FornitoriController">
   <children>
      <TextField fx:id="txtSearch" layoutX="10.0" layoutY="30.0" prefHeight="30.0" prefWidth="280.0" />
      <Button fx:id="btnSearch" layoutX="300.0" layoutY="30.0" mnemonicParsing="false" onAction="#searchFornitori" prefHeight="30.0" prefWidth="100.0" text="Cerca">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <TableView fx:id="gridFornitori" layoutX="10.0" layoutY="70.0" prefHeight="520.0" prefWidth="880.0">
         <columns>
            <TableColumn fx:id="codColumn" prefWidth="163.0" text="Codice" />
            <TableColumn fx:id="descColumn" prefWidth="361.0" text="Descrizione" />
            <TableColumn fx:id="nomeColumn" minWidth="0.0" prefWidth="158.0" text="Nome" />
            <TableColumn fx:id="cognColumn" minWidth="0.0" prefWidth="154.0" text="Cognome" />
         </columns>
      </TableView>
      <Button fx:id="btnAdd" layoutX="790.0" layoutY="30.0" mnemonicParsing="false" onAction="#addFornitori" prefHeight="30.0" prefWidth="100.0" text="Aggiungi">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</Pane>
